// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String
  Folders Folder[]
  Files File[]
}

model Folder {
  id    Int     @default(autoincrement()) @id
  owner User @relation(fields: [ownerId], references: [id])
  ownerId  Int
  name  String
  Files File[]
}

model File {
  id        Int      @default(autoincrement()) @id
  title     String
  content   String
  folder Folder @relation(fields: [folderId], references: [id])
  folderId  Int
  owner User @relation(fields: [ownerId], references: [id])
  ownerId  Int
  accsessMails String[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}
